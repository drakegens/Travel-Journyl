<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="drakegens.traveljournyl.MainActivity"
    tools:showIn="@layout/activity_main">


    <Button
        android:id="@+id/newTravelExbtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.25"
        android:text="@string/newTravelExperience" />

    <Button
        android:id="@+id/existTravelExbtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.25"
        android:text="@string/existingTravelExperience" />

    <Button
        android:id="@+id/travelFactsbtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.25"
        android:text="@string/viewTravelFacts" />

    <Button
        android:id="@+id/RSSFeedbtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.25"
        android:text="@string/viewRSSFeed" />
</LinearLayout>